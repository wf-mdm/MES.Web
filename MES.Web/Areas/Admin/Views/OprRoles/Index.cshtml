@model IEnumerable<MES.Web.Areas.Admin.Models.HR_ROLES>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="box data-list">
    <div class="box-header with-border">
        <form class="form-inline" method="post">
            <div class="form-group">
                @Html.Label("用户名")
                <input type="text" name="USERID" value="@ViewBag.Query.USERID" />
            </div>
            <div class="form-group">
                @Html.Label("角色")
                <input type="text" name="ROLEID" value="@ViewBag.Query.ROLEID" />
            </div>
            <button type="submit" class="btn btn-primary">查询</button>
            <span class="separator" />
            @Html.ActionLink("增加", "Create", "", new { @class = "btn btn-success" })
        </form>
    </div>
    <div class="box-body">
        <table class="table compact table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.OPERNAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ROLEID)
        </th>
        <th>维护</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.OPERNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ROLEID)
        </td>
        <td>
            @Html.ActionLink("删除", "Delete", new { USERID = item.USERID, ROLEID = item.ROLEID}, new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
