                    <div class="col-md-5">
                        @Html.DropDownListFor(model => model.SEMILINEGRP, null, new { htmlAttributes = new { @class = "form-control select2", style = "width: 100%" } })
                    </div>
                    <div class="col-md-5 error-msg">
                        @Html.ValidationMessageFor(model => model.SEMILINEGRP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="保存" class="btn btn-primary" />
                        @Html.ActionLink("取消", String.Format("Index/{0}_{1}", Model.PARTNO, Model.PARTVER), null, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>

