@model MES.Web.Areas.Admin.Models.ENG_BOMDETAIL
@using MES.Web.Controllers

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}


<div class="box data-form">
    <div class="box-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.ITEMID)
            @Html.HiddenFor(model => model.PARTNO)
            @Html.HiddenFor(model => model.PARTVER)
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.COMP_PARTNO, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.COMP_PARTNO, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-5 error-msg">
                        @Html.ValidationMessageFor(model => model.COMP_PARTNO, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DESCRIPTION, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.DESCRIPTION, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-5 error-msg">
                        @Html.ValidationMessageFor(model => model.DESCRIPTION, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.L_OPNO, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.L_OPNO, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-5 error-msg">
                        @Html.ValidationMessageFor(model => model.L_OPNO, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.UNITCONSUMEQTY, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.UNITCONSUMEQTY, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-5 error-msg">
                        @Html.ValidationMessageFor(model => model.UNITCONSUMEQTY, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.LotControl, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        <div class="radio">
                            @Html.RadioButtonEx("LotControl", MESHtml.YesOrNo, Model == null ? "" : Model.LotControl)
                        </div>
                    </div>
                    <div class="col-md-5 error-msg">

                        @Html.ValidationMessageFor(model => model.LotControl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SERIALCONTROL, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        <div class="radio">
                            <div class="radio">
                                @Html.RadioButtonEx("SERIALCONTROL", MESHtml.YesOrNo, Model == null ? "" : Model.SERIALCONTROL)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5 error-msg">

                        @Html.ValidationMessageFor(model => model.SERIALCONTROL, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsKeyID, htmlAttributes: new { @class = "control-label col-md-2" })
