                        </div>
                    </div>
                    <div class="col-md-5 error-msg">

                        @Html.ValidationMessageFor(model => model.CNTCONTROL, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ISSEMI, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        <div class="radio">
                            @Html.RadioButtonEx("ISSEMI", MESHtml.YesOrNo, Model == null ? "" : Model.ISSEMI)
                        </div>
                    </div>
                    <div class="col-md-5 error-msg">

                        @Html.ValidationMessageFor(model => model.ISSEMI, "", new { @class = "text-danger" })
