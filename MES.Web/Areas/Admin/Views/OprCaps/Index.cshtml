@model IEnumerable<MES.Web.Areas.Admin.Models.HR_OPERCAPBMATRIX>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="box data-list">
    <div class="box-header with-border">
        <form class="form-inline" method="post">
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.OPERID)</label>
                @Html.DropDownList("OPERID", null, "-- 请选择 --", htmlAttributes: new { @class = "form-control select2", style = "width:200px" })
            </div>
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.LINENAME)</label>
                @Html.DropDownList("LINENAME", null, "-- ALL --", htmlAttributes: new { @class = "form-control select2", style = "width:300px" })
            </div>
            <button type="submit" class="btn btn-primary">查询</button>
            <span class="separator" />
            @Html.ActionLink("增加", "Create", "", new { @class = "btn btn-success" })
        </form>
    </div>
    <div class="box-body">
        <table class="table compact table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Oper.OPERNAME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LINENAME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.L_OPNO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.L_STNO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CAPBLEVEL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.COMMENTS)
                </th>
                <th>维护</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Oper.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LINENAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.L_OPNO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.L_STNO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CAPBLEVEL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.COMMENTS)
                    </td>
                    <td>
                        @Html.ActionLink("编辑", "Edit", new { OPERID = item.OPERID, LINENAME = item.LINENAME, L_OPNO = item.L_OPNO }, new { @class = "btn btn-info" })
                        @Html.ActionLink("删除", "Delete", new { OPERID = item.OPERID, LINENAME = item.LINENAME, L_OPNO = item.L_OPNO }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
