@model IEnumerable<MES.Web.Areas.Admin.Models.ENG_RWKSCRCODE>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="box data-list">
    <div class="box-header with-border">
        <form class="form-inline" method="post">
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.QCTYPE)</label>
                @Html.DropDownList("QCTYPE", null, "-- 请选择 --", htmlAttributes: new { @class = "form-control select2", style = "width:200px" })
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.LINENAME)</label>
                @Html.DropDownList("LINENAME", null, "-- 请选择 --", htmlAttributes: new { @class = "form-control select2", style = "width:200px" })
            </div>
            <button type="submit" class="btn btn-primary">查询</button>
            <span class="separator" />
            @Html.ActionLink("增加", "Create", "", new { @class = "btn btn-success" })
        </form>
    </div>
    <div class="box-body">
        <table class="table compact table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.QCCODE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QCTYPE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DESCRIPTION)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LINENAME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DEFAULTOOP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FROMOP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.COMMENTS)
                </th>
                <th>维护</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.QCCODE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QCTYPE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DESCRIPTION)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LINENAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DEFAULTOOP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FROMOP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.COMMENTS)
                    </td>
                    <td>
                        @Html.ActionLink("编辑", "Edit", new { id = item.QCCODE }, new { @class = "btn btn-info" })
                        @Html.ActionLink("删除", "Delete", new { id = item.QCCODE }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>