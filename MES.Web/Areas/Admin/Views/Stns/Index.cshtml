@model IEnumerable<MES.Web.Areas.Admin.Models.ENG_LINESTATION>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="box data-list">
    <div class="box-header with-border">
        <form class="form-inline" method="post">
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.LINENAME)</label>
                @Html.DropDownList("LINENAME", null, "-- 请选择 --", htmlAttributes: new { @class = "form-control select2", style = "width:250px" })
            </div>
            <button type="submit" class="btn btn-primary">查询</button>
            <span class="separator" />
            @Html.ActionLink("增加", "Create", "", new { @class = "btn btn-success" })
        </form>
    </div>
    <div class="box-body">
        <table class="table compact table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Op.LINENAME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.L_OPNO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.L_STNO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DISPLAYNAME)
                </th>
                <th>维护</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Op.LINENAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Op.CodeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.L_STNO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DISPLAYNAME)
                    </td>
                    <td>
                        @Html.ActionLink("编辑", "Edit", new { LINENAME = item.LINENAME, L_STNO = item.L_STNO }, new { @class = "btn btn-info" })
                        @Html.ActionLink("删除", "Delete", new { LINENAME = item.LINENAME, L_STNO = item.L_STNO }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>