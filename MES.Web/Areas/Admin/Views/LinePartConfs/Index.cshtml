@model IEnumerable<MES.Web.Areas.Admin.Models.ENG_LINEPARTCONF>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}
<div class="box box-primary data-list">
    <div class="box-header with-border">
        <form class="form-inline" method="post">
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.LINENAME)</label>
                @Html.DropDownList("LINENAME", null, "-- 请选择 --", htmlAttributes: new { @class = "form-control select2", style = "width:200px" })
            </div>
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.PARTNO)</label>
                @Html.DropDownList("PARTNO", null, "-- 请选择 --", htmlAttributes: new { @class = "form-control select2", style = "width:200px" })
            </div>
            <button type="submit" class="btn btn-primary">查询</button>
            <span class="separator" />
            @Html.ActionLink("增加", "Create", "", new { @class = "btn btn-success" })
        </form>
    </div>
    <div class="box-body">
        <table class="table compact table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LINENAME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PARTNO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PARTVER)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SETTINGType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.STDYIELDRATE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CONTNRTYPE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RT_NAME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.STDHEADCOUNTS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DEFAULT_CONFNAME)
                </th>
                <th>维护</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Line.BUNO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PARTNO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PARTVER)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SETTINGType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.STDYIELDRATE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CONTNRTYPE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RT_NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.STDHEADCOUNTS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DEFAULT_CONFNAME)
                    </td>
                    <td>
                        @Html.ActionLink("编辑", "Edit", new { LINENAME=item.LINENAME, PARTNO=item.PARTNO }, new { @class = "btn btn-info" })
                        @Html.ActionLink("删除", "Delete", new { LINENAME = item.LINENAME, PARTNO = item.PARTNO }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
