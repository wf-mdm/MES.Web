@model IEnumerable<MES.Web.Areas.Admin.Models.WMS_CONTAINERTYPEATTR>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="box box-primary data-list">
    <div class="box-header with-border">
        <form class="form-inline" method="post">
            @Html.ActionLink("返回", "Index", "ContnrTypes", "", new { @class = "btn btn-default" })
            <span class="separator" />
            <button type="submit" class="btn btn-primary">查询</button>
            <span class="separator" />
            @Html.ActionLink("增加", "Create", "", new { @class = "btn btn-success" })
        </form>
    </div>
    <div class="box-body">
        <table class="table compact table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PROPERTYNAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PROPERTYVALUE)
        </th>
        <th>维护</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PROPERTYNAME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PROPERTYVALUE)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new {  id=item.PROPERTYNAME }, new { @class="btn btn-info"})
            @Html.ActionLink("删除", "Delete", new{ id=item.PROPERTYNAME }, new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
    </div>
</div>
