@model IEnumerable<MES.Web.Areas.Admin.Models.ENG_LINEOPPARAMCONF>

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<div class="box data-list">
    <div class="box-header with-border">
        <form class="form-inline" method="post">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.CONFNAME)
                <input type="text" name="CONFNAME" value="@ViewBag.Query.CONFNAME" />
            </div>
            <button type="submit" class="btn btn-primary">查询</button>
            <span class="separator" />
            @Html.ActionLink("增加", "Create", "", new { @class = "btn btn-success" })
        </form>
    </div>
    <div class="box-body">
        <table class="table compact table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CONFNAME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LINENAME)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.L_OPNO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.L_STNO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PARAM_ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PARAM_VAL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PARAM_TEXT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DATA_TYPE)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PARAM_TYPE)
                </th>
                <th>维护</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CONFNAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LINENAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.L_OPNO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.L_STNO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PARAM_ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PARAM_VAL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PARAM_TEXT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DATA_TYPE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PARAM_TYPE)
                    </td>
                    <td>
                        @Html.ActionLink("编辑", "Edit", new { CONFNAME = item.CONFNAME, CONFID = item.CONFID }, new { @class = "btn btn-info" })
                        @Html.ActionLink("删除", "Delete", new { CONFNAME = item.CONFNAME, CONFID = item.CONFID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>