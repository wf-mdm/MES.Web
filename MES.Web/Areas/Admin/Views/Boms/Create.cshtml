                @Html.DropDownList("DEFAULT_CONFNAME", null, "-- 请选择 --", htmlAttributes: new { @class = "form-control select2", style = "width: 100%" } )
            </div>
            <div class="col-md-5 error-msg">
                @Html.ValidationMessageFor(model => model.DEFAULT_CONFNAME, "", new { @class = "text-danger" })
