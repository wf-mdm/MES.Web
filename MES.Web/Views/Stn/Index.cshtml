@using System.Data;
@model MES.Web.Models.StnModel
<!DOCTYPE html>
<html>
<head>
    <title>MES - Admin</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/assets/css/all")
</head>
<body class="hold-transition skin-blue layout-top-nav">
    <div class="wrapper">
        <header class="main-header">
            <nav class="navbar navbar-static-top">
                <ul class="nav navbar-nav">
                    <li class="dropdown messages-menu">
                        <a href="#" class="logo dropdown-toggel" data-toggle="control-sidebar">MES Admin<i class="fa fa-angle-down pull-right"></i></a>
                    </li>
                    <li class="title">@ViewBag.Line.DispName <i class="fa fa-angle-right"></i> @Html.DisplayFor(m => m.Stn) [ @Html.DisplayFor(m => m.Name) ]</li>
                </ul>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        @Html.Partial("_UserMenu")
                        <li>
                            <a href="#" class="text-yellow">
                                <i class="fa fa-info-circle"></i><span class="hidden-xs"> 帮助</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="sidebar control-sidebar control-sidebar-dark control-sidebar-left">
            <ul class="sidebar-menu">
                <li class="treeview"><a href="Line?@Html.DisplayFor(m => m.Line)"><i class="fa fa-circle-o"></i><span>返回产线主页</span></a></li>
            </ul>
        </aside>
        <div class="control-sidebar-bg"></div>

        <div class="content-wrapper" id="stn-content">
            <section class="content">
                <div class="col-sm-6" id="stn-main">
                </div>

                <div class="col-sm-6" id="stn-sop">
                    <div class="box box-success box-solid">
                        <div class="box-header with-border" style="padding:0;">
                            <ul class="nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle box-title" data-toggle="dropdown">工单: WO000001 <i class="fa fa-angle-down pull-right"></i></a>
                                    <ul class="dropdown-menu nav nav-pills nav-stacked bg-green">
                                        <li><a href="#">WO00001</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="box-body">
                            <div id="op-sop" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner" role="listbox">
                                    <div class="item active">
                                        <img class="img-responsive pad" src="op/sop.png" />
                                    </div>
                                    <div class="item">
                                        <img class="img-responsive pad" src="op/sop.png" />
                                    </div>
                                </div>
                                <a class="left carousel-control" href="#op-sop" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#op-sop" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
            </section>
        </div>

        @Html.Partial("_Foot")
    </div>
    <script>
        var Stn = {
            info: {
                user:"@ViewBag.User",
                line: "@Html.DisplayFor(model => model.Line)",
                lineName: "@ViewBag.Line.Name",
                op: "@Html.DisplayFor(model => model.Op)",
                stn: "@Html.DisplayFor(model => model.Stn)",
                name: "@Html.DisplayFor(model => model.Name)",
                features:[
                    { APP_ID: "Cstart", APP_DESCRIPTION: "生产申报" },
                    { APP_ID: "Cng", APP_DESCRIPTION: "不良申报" },
                    { APP_ID: "Cstart", APP_DESCRIPTION: "生产申报" },
                    { APP_ID: "Cng", APP_DESCRIPTION: "不良申报" },
                    { APP_ID: "Rwk", APP_DESCRIPTION: "返工" }
                ],
                app: "@Url.Content("~/")"
            },
            Status: {}
        };
    </script>
    @Scripts.Render("~/assets/js/base")
    @Scripts.Render("~/assets/js/stn")
</body>

</html>