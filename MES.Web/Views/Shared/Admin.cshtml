                        </ul>
                    </li>
                </ul>
            </section>
        </aside>

        <div class="content-wrapper">
            <section class="content-header">
                <h1>Admin</h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i>首页</a></li>
                    <li class="active">Admin</li>
                </ol>
            </section>

            <section class="content">
                @RenderBody()
            </section>
        </div>

        @Html.Partial("_Foot")
